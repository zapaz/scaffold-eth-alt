{
  "name": "@scaffold-eth-alt/foundry",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf node_modules out broadcast cache .turbo ",
    "chain": "anvil",
    "format": "forge fmt",
    "check": "solhint src/**/*.sol",
    "build": "forge compile",
    "test": "forge test",
    "abis": "ts-node mergeAbis.ts",
    "deploy:all": "forge script script/DeployAll.s.sol",
    "deploy:deploy": "pnpm deploy:all --fork-url $CHAIN --account $ACCOUNT --broadcast",
    "deploy:validate": "pnpm deploy:all --fork-url $CHAIN",
    "deploy:anvil": "export CHAIN=anvil ACCOUNT=$ANVIL_ACCOUNT && pnpm deploy:deploy --password '' && pnpm run deploy:validate",
    "deploy:testnet": "ACCOUNT=$TESTNET_ACCOUNT pnpm deploy:deploy --verify && pnpm run deploy:validate",
    "deploy:mainnet": "ACCOUNT=$MAINNET_ACCOUNT pnpm deploy:deploy --verify && pnpm run deploy:validate",
    "deploy:sepolia": "CHAIN=sepolia pnpm deploy:testnet",
    "deploy:optimism": "CHAIN=optimism pnpm deploy:mainnet"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.14.10",
    "eslint-plugin-json": "^4.0.0",
    "fs-extra": "^11.2.0",
    "prettier": "^3.3.3",
    "solhint": "^5.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  }
}