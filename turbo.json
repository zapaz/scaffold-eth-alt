{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    ".envrc"
  ],
  "envMode": "strict",
  "ui": "stream",
  "tasks": {
    "format": {
      "inputs": [
        "src/**",
        "**/*.json"
      ],
      "outputLogs": "new-only"
    },
    "check": {
      "dependsOn": [
        "format"
      ],
      "outputLogs": "new-only"
    },
    "build": {
      "dependsOn": [
        "check"
      ],
      "outputLogs": "new-only"
    },
    "test": {
      "dependsOn": [
        "deploy"
      ],
      "cache": false,
      "outputLogs": "new-only"
    },
    "chain": {
      "cache": false,
      "outputLogs": "new-only"
    },
    "deploy": {
      "env": [
        "ETHERSCAN_API_KEY*"
      ],
      "cache": false,
      "dependsOn": [
        "build",
        "chain"
      ],
      "outputLogs": "new-only"
    },
    "start": {
      "dependsOn": [
        "deploy"
      ],
      "cache": false,
      "persistent": true,
      "inputs": [
        "src/**"
      ],
      "outputLogs": "new-only"
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "inputs": [
        "src/**"
      ],
      "outputLogs": "new-only"
    }
  }
}